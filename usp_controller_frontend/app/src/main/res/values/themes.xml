<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.UspController" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/ocean_primary</item>
        <item name="colorSecondary">@color/ocean_secondary</item>
        <item name="colorError">@color/ocean_error</item>
        <item name="android:statusBarColor">@color/ocean_primary</item>
        <item name="android:navigationBarColor">@color/ocean_surface</item>
        <item name="android:windowBackground">@color/ocean_background</item>
        <item name="android:textColor">@color/ocean_text</item>
        <item name="materialButtonStyle">@style/Widget.Usp.Button</item>
        <item name="materialCardViewStyle">@style/Widget.Usp.Card</item>
        <item name="toolbarStyle">@style/Widget.Usp.Toolbar</item>
    </style>

    <style name="Widget.Usp.Button" parent="Widget.Material3.Button">
        <item name="android:insetLeft">8dp</item>
        <item name="android:insetRight">8dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.Usp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="Widget.Usp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/ocean_surface</item>
        <item name="titleTextColor">@color/ocean_text</item>
    </style>
</resources>
